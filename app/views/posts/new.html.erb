<div class="post-form">
  <%= form_with model: @post do |form| %>
    <div class="field">
      <%= form.label :title, "Post title" %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :body, "Do not hesitate, just start typing..." %>
      <%= form.text_field :body %>
    </div>
  
    <div class="field"><%= form.submit "Create post" %></div>
  <% end %>
</div>
