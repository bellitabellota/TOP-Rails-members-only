<%= render "navbar" %>

<div class="notice">
  <%= render "shared/notice_authentication_status" %>
</div>

<main>
  <h1>Exclusive Clubhouse<br>Cat's Secrets</h1>
  <div class="posts-container">
    <% @posts.each do |post|%>
    <div class="post">
      <h2><%= post.title %></h2>
      <p class="author">Author:
        <% if user_signed_in? %>
        <%= User.find(post.user_id).name %>
        <% else %>
        *******
        <% end %>
      </p>
      <p class="post-body"><%= post.body %></p>
    </div>
    <% end %>
  </div>
</main>